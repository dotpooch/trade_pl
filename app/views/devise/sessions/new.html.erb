

<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">sign in to continue to beta</h1>
            <div class="account-wall">
                <img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120" alt="">


<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :class => "form-signin" ) do |f| %>
  <%= devise_error_messages! %>

  <div class="control-group">

    <div class="controls">
  <%= f.email_field :email, :placeholder => "Email", :autofocus => true, :class => "form-control" %></div>


    <div class="controls">
  <%= f.password_field :password, :placeholder => "Password", :class => "form-control" %></div>
  
  
  
  <div class="form-actions">
 <%= f.submit "Sign In", :class=>"btn btn-lg btn-primary btn-block" %>
  </div>
  
  <% if devise_mapping.rememberable? %>
                <label class="checkbox pull-left">
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
	<% end %>
                </label>
  
                <a href="#" class="pull-right need-help">Need help? </a><span class="clearfix"></span>
  
<% end %>



				</div>
		    <%= link_to "Request a Password", new_user_password_path, :class => "text-center new-account" %>
        </div>
    </div>
</div>

