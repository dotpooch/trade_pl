<td class='transaction'>

<h3>
<%= link_to "Add a Transaction to #{@security.name}", new_security_transaction_path(@security.ticker) %>
</h3>

<% unless @security.transactions.empty? %>
<h3>
trades
</h3>

<% if @security.transactions %>
<%= "#{@security.transactions.count} transactions" %>

<table id="sortable_list" class="table table-striped table-bordered table-condensed">
  <thead>
  <tr>
    <th class="list_item_transaction_date">Date</th>
    <th class="list_item_transaction_price">Price</th>
    <th class="list_item_transaction_commission">Commission</th>
  </tr>
  </thead>
  <tbody>

<% @security.transactions.each do |transaction| %>
  <tr>
    <td class="list_item_transaction_date"><%= transaction.datetime %></td>
    <td class="list_item_transaction_price"><%= transaction.price %></td>
    <td class="list_item_transaction_commission"><%= transaction.commission %></td>
   </tr>
<% end %>
  </tbody>

</table>
<% end %>

<% end %>

</td>
