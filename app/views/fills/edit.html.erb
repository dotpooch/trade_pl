<%= link_to 'Index', fills_path, class: "btn btn-info .btn_large" %>  
<%= link_to 'show', fill_path(@fill.stub), class: "btn btn-info .btn_large" %>     
<%= link_to 'destroy', fill_path(@fill.stub), :confirm => 'Are you sure you want to destroy this fill?', :method => :delete, class: "btn btn-danger .btn_large" %>


<h1>Editing fill</h1>

<table class="table table-striped table-bordered table-condensed">

<tr>
<td><%= "Symbol" %></td>
<td><%= @fill.symbol %></td>
<tr>


<tr>
<td><%= "Gross Principal" %></td>
    <%= td_money(@fill.gp,2) %>
<tr>

<tr>
<td><%= "Net Principal" %></td>
    <%= td_money(@fill.np,2) %>
<tr>

<tr>
<td><%= "Transaction" %></td>
<td><%= link_to @fill.trans, transaction_path(@fill.trans) %></td>

<tr>
<tr>
<td><%= "Trade" %></td>
<td><%= link_to @fill.ts, trade_path(@fill.ts) %></td>
<tr>

</table>

<%= semantic_form_for @fill do |f| %>
  
  <%= f.input :date, :label => "Date" %>
  <%= f.input :fill_type, :label => "Fill Type" %>
  <%= f.input :commission, :label => "Commission" %>
  <%= f.input :price, :label => "Price" %>
  <%= f.input :quantity, :label => "Quantity" %>
  <%= f.input :s, :label => "Nickname" %>

  <%= f.actions do %>
    <%= f.action :submit, class: "btn btn-warning .btn_large" %>
  <% end %>

<% end %>
