<h3>order fills</h3>

<% @fills.each do |fill| %>
<table class="table table-striped table-bordered table-condensed">
<thead>
  <tr>
     <th colspan="6">
	 <%= "#{fill.name} [#{fill.symbol}]" %>
</th>
	</tr>
</thead>

<tbody>

  <tr>
     <td>
     <table>
     <thead>
	 <th><%= td_long_date(fill.date) %></th>
     </thead>
     <tbody>
    <tr><td><%= fill.jottings %></td></tr>
     </tbody>
     </table>
     </td>

     <td colspan="4">
     <table>
     <thead>
	 <th><%= fill.fill_type %></th>
     </thead>
     <tbody>
       <tr><td>Quantity</td><td><%= fill.quantity %></td><td></td><td></td></tr>
       <tr><td>Price</td><%= td_money(fill.price,4) %><td></td><td></td></tr>
       <tr><td>Gross Principal</td><%= td_money(fill.gross_principal,2) %><td colspan="4">commissions + sec fees</td></tr>
       <tr><td>Total Fees</td><%= td_money(fill.fees,2) %><%= td_money(fill.commission,2) %><%= td_money(fill.sec_fee,2) %></tr>
       <tr><td>Net Principal</td><%= td_money(fill.net_principal,2) %><td></td><td></td></tr>
     </tbody>
     </table>
	 </td>

     <td colspan="2">
     <table>
     <thead>
	 <tr>
    <td>
	Order Nickname
	</td>
	<td>
      <%= link_to fill.stub, fill_path(fill.stub), class: "btn btn-info btn-mini" %>
		</td></tr>
  <tr>
  <tr>
   <td>
    <%= link_to 'edit', edit_fill_path(fill.stub), class: "btn btn-warning btn-mini" %>
    <%= link_to 'destroy', fill_path(fill.stub), :confirm => 'Are you sure you want to destroy this fill?', :method => :delete, class: "btn btn-danger btn-mini" %>
    </td>
  </tr>
     <th colspan="2">
	 Part of:
</th>
	</tr>
	   
     </thead>
     <tbody>
       <tr><td>Transaction</td>    <td><%= link_to fill.transaction_stub, transaction_path(fill.transaction_stub), class: "btn btn-info btn-mini"  %></td></tr>
       <tr><td>Trade</td>    <td><%= link_to fill.ts, trade_path(fill.ts), class: "btn btn-info btn-mini"  %></td></tr>
     </tbody>
     </table>
	 </td>



	 </tr>
    <td>
    </td>
  </tr>

<% end %>

</tbody>
</table>